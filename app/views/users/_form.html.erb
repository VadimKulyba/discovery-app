<%= form_for @user, url: user_path_url, html: {multipart: true }  do |form| %>
  <img src="<%= avatar_for(@user)%>" class="img-circle">
  <br>
  <a href="http://gravatar.com/emails">change</a>
  <p>Change or add info</p>
  <div class="form-group">
    <%= form.text_field( :name, placeholder: 'Name', class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= form.text_field( :last_name, placeholder: 'Last name', class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= form.text_field( :department, placeholder: 'Department', class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= form.text_area( :description, placeholder: 'Description...', class: 'form-control') %>
  </div>
  <%= form.submit('Save changes',class: 'btn btn-large btn-success') %>
<% end %>