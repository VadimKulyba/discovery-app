<div class="row">
  <div class="col-md-3 col-lg-offset-1">
    <h1>
      <div>
        <img src="<%= avatar_for(@user)%>" class="img-circle">
      </div>
    </h1>
    <div class="center">
      <div>
        <h3>
          <%= @user.name %>
          <%= @user.last_name %>
        </h3>
      </div>
      <div>
        <h3>
          <%= @user.department %>
        </h3>
      </div>
      <div>
        <h3>
          <%= @user.description %>
        </h3>
      </div>
    </div>
  </div>
  <div class="col-md-1"></div>
  <div class="col-md-7">
    <table class="table table-hover">
      <caption class="text-center">Expedition billboard</caption>
      <tr>
        <th>Photo</th>
        <th>Name</th>
        <th>Target</th>
      </tr>
      <% @expeditions.each do |expedition|%>
        <tr>
          <td><%= image_tag(expedition.cover.url(:thumb)) %></td>
          <td><%= link_to expedition.name, expedition_path(expedition) %></td>
          <td><%= expedition.target %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
